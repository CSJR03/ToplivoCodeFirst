@model PagedList.IPagedList<ToplivoCodeFirst.Models.Operation>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Зарегестрировать новую операцию", "Create")
</p>
@using (Html.BeginForm("Index", "Fuels", FormMethod.Get))
{
    <fieldset>
        Наименование емкости: @Html.TextBox("strFuelTypeFind", (string)Session["strFuelTypeFind"])
        <input type="submit" value="Найти" />
        Наименование топлива: @Html.TextBox("strTankTypeFind", (string)Session["strTankTypeFind"])
        <input type="submit" value="Найти" />
    </fieldset>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Fuel.FuelType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Tank.TankType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Inc_Exp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Fuel.FuelType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tank.TankType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Inc_Exp)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.OperationID }) |
            @Html.ActionLink("Details", "Details", new { id=item.OperationID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.OperationID })
        </td>
    </tr>
}

</table>
Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
