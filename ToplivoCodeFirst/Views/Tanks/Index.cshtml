@model ToplivoCodeFirst.Models.PagedCollection<Tank>
@using ToplivoCodeFirst.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PagedItems.Select(t=>t.TankType))
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PagedItems.Select(t => t.TankWeight))
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PagedItems.Select(t => t.TankVolume))
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PagedItems.Select(t => t.TankMaterial))
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model.PagedItems) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TankType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TankWeight)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TankVolume)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TankMaterial)
        </td>
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TankID }) |
            @Html.ActionLink("Details", "Details", new { id=item.TankID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TankID })
        </td>
    </tr>
}

</table>
